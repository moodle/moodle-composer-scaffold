{
    "name": "moodle/core-composer-scaffold",
    "description": "A scaffolding tool for Composer-based Moodle installations",
    "type": "composer-plugin",
    "require": {
        "composer-plugin-api": "^2.0",
        "php": ">=8.3.0",
        "symfony/process": "^7.4",
        "symfony/dotenv": "^7.4"
    },
    "require-dev": {
        "composer/composer": "^2",
        "phpstan/phpstan": "^2.1"
    },
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Moodle\\Composer\\Scaffold\\": "src/"
        }
    },
    "extra": {
        "class": "Moodle\\Composer\\Scaffold\\Plugin"
    },
    "scripts": {
        "test": "@php phpunit",
        "phpstan": "@php phpstan analyse"
    }

}
